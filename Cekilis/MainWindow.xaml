<Window x:Class="Cekilis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cekilis"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Çekiliş Uygulaması" Height="450" Width="850">
    
    <Grid>
        <WrapPanel>
            <TextBox Text="" Name="cekilisList"  TextWrapping="Wrap" Width="326" Height="126" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,20,250,0" TextAlignment="Center"/>
            <TextBox Text="" x:Name="secilecekSayi"  TextWrapping="Wrap" Width="86" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="400,30,250,0"/>
            <Label Content="Kaç Kişi Seçilecek?" HorizontalAlignment="Left" Margin="250,-25,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <Button Content="Çekilişi Başlat" x:Name="cekilisBtn" Margin="0,30" HorizontalAlignment="Center" VerticalAlignment="Top" Height="36" Width="112" Click="Button_Click" RenderTransformOrigin="-2.605,10.752"/>
            <TextBox HorizontalAlignment="Left" x:Name="sonuc" Margin="300,0,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="64"/>
        </WrapPanel>
    </Grid>
</Window>
